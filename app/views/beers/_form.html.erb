<% if @beer.errors.any? %>
<div id="error_explanation">
  <h4><%= pluralize(@beer.errors.count, "error") %> kept this beer from saving:</h4>
  <ul>
  <% @beer.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>

<%= form_for @beer do |f| %>
  <br>
  <%= f.hidden_field :user_id, value: @beer.user_id ||= current_user.id %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :style %>
  <%= f.text_field :style %><br>
  <%= f.label :abv %>
  <%= f.number_field :abv, class: 'text_field', step: 0.1 %><br>
  <%= f.label :ibu %>
  <%= f.number_field :ibu %><br>
  <%= f.label :srm %>
  <%= f.number_field :srm %><br>
  <%# Refactor the partial so this can go away; counterpoint: one ingredient of each type displays.%>
  <h4>Ingredients:</h4>
  <select name="beer[ingredient_attributes][][name]">
    <% Ingredient.all.each do |ingredient| %>
      <option value="<%= ingredient.name %>"><%= ingredient.name %></option>
    <% end %>
  </select>
  Amount <input name="beer[ingredient_attributes][][amount]"><br>
  <br>

  <%= f.submit %>
<% end %>
