<%= form_for @ingredient do |f| %>
  <% if @ingredient.errors.any? %>
  <div id="error_explanation">
    <h4><%= pluralize(@ingredient.errors.count, "error") %> prohibited this ingredient from being saved:</h4>
    <ul>
    <% @ingredient.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :origin %>
  <%= f.text_field :origin %><br>
  <label><strong>Type of Ingredient</strong></label><br>
  <% kinds = ["hops", "yeast", "malt", "water"] %>
  <% kinds.each do |one_kind| %>
    <% if @ingredient.kind == one_kind %>
      <%= radio_button_tag(:kind, one_kind, checked = true) %>
    <% else %>
      <%= radio_button_tag(:kind, one_kind, checked = false) %>
    <% end %>
    <%= label_tag(:kind, one_kind ) %><br>
  <% end %>
  <%= f.submit %>
<% end %>
