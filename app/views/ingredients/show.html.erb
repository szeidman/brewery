<div id="js-ingredient-ids" data-ingredient-ids="<%= @ingredient_ids %>"></div>
<div class="show-ingredient">
  <h1><%= @ingredient.name -%></h1>
  <h3>(<%= @ingredient.kind -%>)</h3>
  <br>
  <%= render partial: 'attribute', locals: {title: "Origin:", value: @ingredient.origin} %>
  <%= render partial: 'amount' %>
  <br><br>
  <%= render partial: 'found' %>

  <br>
  <%= button_to "Edit Ingredient", edit_ingredient_path, method: :get if current_user && !@beer %>
  <%= button_to "Delete Ingredient", ingredient_path(@ingredient), method: :delete if current_user && !@beer%>
  <br>
  <p><%= button_to "Go to #{@beer.name} ingredients", beer_ingredients_path(@beer), method: :get if @beer %></p>
  <p><%= button_to "Back to #{@beer.name}", @beer, method: :get if @beer %></p>
</div>
<% if @beer %>
<p><button type="button" class="js-next" data-beer-id="<%=@beer.id%>" data-ing-id="<%=@ingredient.id%>">Jump to next ingredient</button></p>
<% else %>
<p><button type="button" class="js-next" data-ing-id="<%=@ingredient.id%>">Jump to next ingredient</button></p>
<% end %>
